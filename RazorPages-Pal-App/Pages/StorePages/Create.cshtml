@page
@model RazorPages_Pal_App.Pages.StorePages.CreateModel
@{
}




<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto 0">
            <h3 class="text-primary">Create Product</h3>
            @if (Model.Messages!=null)
            {
                <div class="text-danger">Status : @Model.Messages</div>
            }
            
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="store.ProductName" class="control-label"></label>
                    <input asp-for="store.ProductName" class="form-control">
                    <span asp-validation-for="store.ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="store.Batch" class="control-label"></label>
                    <input asp-for="store.Batch" class="form-control">
                    <span asp-validation-for="store.Batch" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="store.Quantity" class="control-label"></label>
                    <input asp-for="store.Quantity" class="form-control">
                    <span asp-validation-for="store.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="store.CreationTime" class="control-label"></label>
                    <input asp-for="store.CreationTime" class="form-control">
                    <span asp-validation-for="store.CreationTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="store.Description" class="control-label"></label>
                    <input asp-for="store.Description" class="form-control">
                    <span asp-validation-for="store.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="store.Comments" class="control-label"></label>
                    <input asp-for="store.Comments" class="form-control">
                    <span asp-validation-for="store.Comments" class="text-danger"></span>
                </div>
                <div class="form-group text-center pt-3">
                    <a asp-page="/StorePages/Index" class="btn btn-success mx-3">Go Back</a>
                    <button type="submit" class="btn btn-primary ">Save </button>
                </div>
            </form>
        </div>
    </div>
</div>



